<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mini_map_margin"
    android:layout_marginEnd="@dimen/mini_map_margin"
    android:background="@drawable/border"
    tools:context=".ui.mapview.MiniMapFragment">

    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/mini_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_map_height"
        android:layout_margin="@dimen/border_width"
        map:cameraZoom="17"/>

</FrameLayout>